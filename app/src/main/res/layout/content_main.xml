<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.dragonflyx.volleypoints.MainActivity"
    tools:showIn="@layout/activity_main"
    android:orientation="horizontal"
    android:touchscreenBlocksFocus="false">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LinearLayout_ScoreContainer">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:id="@+id/Linearlayout_Team1">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:text="@string/abc_home_caps"
                android:id="@+id/txtViewTeam1Name"
                android:fontFamily="sans-serif"
                android:textSize="24sp"
                android:gravity="center"
                android:background="@android:color/transparent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/abc_single_zero"
                android:id="@+id/txtview_score_team1"
                android:fontFamily="sans-serif-light"
                android:textSize="112sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:padding="8dp"
                android:layout_margin="8dp"
                android:elevation="8dp"
                android:background="@drawable/rounded_corner" />

            <ImageButton
                android:layout_width="112sp"
                android:layout_height="72sp"
                android:id="@+id/imgbtn_add_point_team1"
                android:src="@drawable/btn_action_up"
                android:background="@android:color/transparent"
                android:layout_weight="1"
                android:tint="@color/colorPrimaryDark"
                android:visibility="gone" />

            <ImageButton
                android:layout_width="112sp"
                android:layout_height="36sp"
                android:id="@+id/imgbtn_reduce_point_team1"
                android:src="@drawable/btn_action_down"
                android:background="@android:color/transparent"
                android:layout_weight="2"
                android:tint="@color/colorPrimaryDark"
                android:visibility="visible" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="36dp"
                android:text="@string/abc_time_out_caps"
                android:id="@+id/textView_timeout_team1"
                android:fontFamily="sans-serif"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/LinearLayout_ScoreContainer"
                android:gravity="center"
                android:id="@+id/Layout_timeout_team1">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox_1_1"
                    android:clickable="false"
                    android:enabled="true" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox_1_2"
                    android:clickable="false"
                    android:enabled="true" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:id="@+id/Linearlayout_Team2">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:text="@string/abc_visit_caps"
                android:id="@+id/txtViewTeam2Name"
                android:fontFamily="sans-serif"
                android:textSize="24sp"
                android:gravity="center"
                android:background="@android:color/transparent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/abc_single_zero"
                android:id="@+id/txtview_score_team2"
                android:fontFamily="sans-serif-light"
                android:textSize="112sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:padding="8dp"
                android:layout_margin="8dp"
                android:elevation="8dp"
                android:background="@drawable/rounded_corner"/>

            <ImageButton
                android:layout_width="112sp"
                android:layout_height="72sp"
                android:id="@+id/imgbtn_add_point_team2"
                android:src="@drawable/btn_action_up"
                android:background="@android:color/transparent"
                android:tint="@color/colorPrimaryDark"
                android:visibility="gone" />

            <ImageButton
                android:layout_width="112sp"
                android:layout_height="36sp"
                android:id="@+id/imgbtn_reduce_point_team2"
                android:src="@drawable/btn_action_down"
                android:background="@android:color/transparent"
                android:tint="@color/colorPrimaryDark"
                android:visibility="visible" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="36dp"
                android:text="@string/abc_time_out_caps"
                android:id="@+id/textView_timeout_team2"
                android:fontFamily="sans-serif"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/LinearLayout_ScoreContainer"
                android:gravity="center"
                android:id="@+id/Layout_timeout_team2">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox_2_1"
                    android:clickable="false"
                    android:enabled="true" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox_2_2"
                    android:clickable="false"
                    android:enabled="true" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
