<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.dragonflyx.volleypoints.MainActivity"
    tools:showIn="@layout/activity_main"
    android:orientation="horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_weight="1">

        <ImageButton
            android:layout_width="112sp"
            android:layout_height="36sp"
            android:id="@+id/imgbtn_add_point_team1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/abc_single_zero"
            android:id="@+id/txtview_score_team1"
            android:fontFamily="sans-serif-light"
            android:textSize="112sp"
            android:textColor="@android:color/secondary_text_light" />

        <ImageButton
            android:layout_width="112sp"
            android:layout_height="36sp"
            android:id="@+id/reduce_point_team1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_weight="1">

        <ImageButton
            android:layout_width="112sp"
            android:layout_height="36sp"
            android:id="@+id/imageButton" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/abc_single_zero"
            android:id="@+id/textView"
            android:fontFamily="sans-serif-light"
            android:textSize="112sp"
            android:textColor="@android:color/secondary_text_light" />

        <ImageButton
            android:layout_width="112sp"
            android:layout_height="36sp"
            android:id="@+id/imageButton2" />
    </LinearLayout>
</LinearLayout>
